<div class="form-horizontal">
  
<h4><%= link_to "Create new post", new_post_path %></h4>
<button type="button" name="drafts" id="drafts-button">View Drafts</button>
<button type="button" name="published" id="published-button">View Published Posts</button>
<br>

<h2>All Posts</h2><br>
<div id="post-list">
  <% @posts.each do |post| %>
    <div class="post <%=post.status%>">
      <h3><%= link_to post.title, post_path(post) %> by <%= post.author %></h3>
      <p><em>Created at <%= post.created_at %></em></p>
      <p class='post-body'> <%= post.body %> </p>
      <button type="button" name="comment" class="comment-button" data-id="<%= post.id %>">Comment</button>
    </div>
      <br>
  <% end %>


</div>
