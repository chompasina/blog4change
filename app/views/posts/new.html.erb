<%= form_for(@post) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title%>
  
    <%= f.label :body %>
    <%= f.text_area :body %>
  
    <%= f.label :author %>
    <%= f.text_field :author %>
    
    <%= check_box_tag(:status) %>
    <%= label_tag(:status, "Publish this? Unpublished posts will be saved as drafts.") %>
    <%= f.submit %>
<% end %>